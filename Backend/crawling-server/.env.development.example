# =================================================================
# Development Environment Configuration
# =================================================================
# 개발 환경용 설정입니다.
# 복사 후 사용: cp .env.development.example .env
# =================================================================

# =================================================================
# Database Settings (Development)
# =================================================================
DATABASE_URL=postgresql://crawler:dev_password@localhost:5432/school_notices_dev
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=3600

# =================================================================
# Redis Settings (Development)
# =================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =================================================================
# API Security (Development - 약한 키 사용 가능)
# =================================================================
API_KEY=dev-api-key-12345
SECRET_KEY=dev-secret-key-67890-not-for-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000
TRUSTED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =================================================================
# Application Settings (Development)
# =================================================================
APP_NAME=College Notice Crawler (Dev)
DEBUG=true
ENV=development
LOG_LEVEL=DEBUG

# =================================================================
# Crawler Settings (Development - 빠른 테스트용)
# =================================================================
DEFAULT_RATE_LIMIT_PER_HOST=2.0
MAX_CONCURRENT_REQUESTS_PER_HOST=4
BROWSER_TIMEOUT_SECONDS=15
MAX_RETRIES=1
RETRY_DELAY_SECONDS=2
RESPECT_ROBOTS_TXT=false
REQUEST_TIMEOUT=15
MAX_CONTENT_LENGTH=10485760

USER_AGENT=Mozilla/5.0 (Development; CollegeNotiBot/1.0-dev)

# =================================================================
# Playwright Settings (Development)
# =================================================================
PLAYWRIGHT_BROWSER_TYPE=chromium
PLAYWRIGHT_HEADLESS=false  # 브라우저 화면 보기
PLAYWRIGHT_VIEWPORT_WIDTH=1280
PLAYWRIGHT_VIEWPORT_HEIGHT=720
PLAYWRIGHT_TIMEOUT=15000
PLAYWRIGHT_WAIT_UNTIL=load

# =================================================================
# Monitoring & Logging (Development)
# =================================================================
SENTRY_DSN=  # 개발 환경에서는 비활성화
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

ENABLE_PROMETHEUS=true
METRICS_PORT=8000

GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

HEALTH_CHECK_INTERVAL=60

LOG_FORMAT=text  # 개발 환경에서는 읽기 쉬운 텍스트 포맷
LOG_FILE_PATH=logs/dev.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=7

# =================================================================
# Notifications (Development - 비활성화)
# =================================================================
SLACK_WEBHOOK_URL=
ENABLE_SLACK_NOTIFICATIONS=false
NOTIFICATION_LEVEL=DEBUG

# =================================================================
# Security Settings (Development - 느슨한 설정)
# =================================================================
ENABLE_RATE_LIMITING=false
MAX_REQUESTS_PER_MINUTE=1000
BLOCK_SUSPICIOUS_IPS=false
ENABLE_PROXY_ROTATION=false

# =================================================================
# Development Only Settings
# =================================================================
ENABLE_DEBUG_TOOLBAR=true
DISABLE_AUTH_CHECK=false
ENABLE_HOT_RELOAD=true
SHOW_SQL_QUERIES=true
